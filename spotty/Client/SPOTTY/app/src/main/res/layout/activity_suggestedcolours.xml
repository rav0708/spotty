<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".suggestedcolours">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"

        android:background="#041f36"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="HERE'S YOUR SUGGESTED COLOUR SPECTRUM "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.049" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">


        <Button
            android:id="@+id/colorBTN"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:background="#FFFFCC"
            android:text=" " />

        <EditText
            android:id="@+id/pagename"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="189dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/colorBTN1"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:background="#FFFFCC"
            android:text=" " />

        <EditText
            android:id="@+id/pagename1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="189dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/colorBTN2"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:background="#FFFFCC"
            android:text=" " />

        <EditText
            android:id="@+id/pagename2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="189dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/colorBTN3"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:background="#FFFFCC"
            android:text=" " />

        <EditText
            android:id="@+id/pagename3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="189dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/preview"
            android:layout_width="252dp"
            android:layout_height="67dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#362624"
            android:text="PREVIEW YOUR SPACE" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/pallet"
            android:layout_width="252dp"
            android:layout_height="67dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#362624"
            android:text="COLOUR PALLET" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <Button
            android:id="@+id/menu1"
            android:layout_width="252dp"
            android:layout_height="67dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#362624"
            android:text="MENU" />


    </LinearLayout>


</LinearLayout>



</ScrollView>

